<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="12dp"
    android:id="@+id/card_view"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="14dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        >

        <com.google.android.material.card.MaterialCardView
            android:layout_width="250dp"
            android:layout_height="160dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="16dp"
            app:cardCornerRadius="14dp"
            app:strokeColor="@color/yellow"
            app:strokeWidth="2dp">

            <ImageView
                android:id="@+id/hotel_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/hotel"

                android:scaleType="centerCrop"
                />

        </com.google.android.material.card.MaterialCardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="18dp"
            android:layout_marginVertical="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10% OFF"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="14dp"
                    android:background="@drawable/cardbg2"
                    android:textSize="12sp"
                    android:textColor="@color/blue" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="14dp"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/cardbg2"
                    android:textSize="12sp"
                    android:textColor="@color/blue"
                    android:drawableStart="@drawable/baseline_star_24"
                    android:drawablePadding="6dp"
                    android:drawableTint="@color/yellow"/>


            </LinearLayout>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_favorite_border_24"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="4dp"
                android:layout_alignParentEnd="true"
                app:tint="@color/blue" />

        </RelativeLayout>

        <TextView
            android:id="@+id/hotel_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AYANA Resort"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginHorizontal="18dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bali, Indonesia"
            android:textSize="12sp"
            android:textColor="@color/dark_grey"
            android:layout_marginHorizontal="18dp"
            android:drawablePadding="4dp"
            android:layout_marginVertical="6dp"
            app:drawableTint="@color/dark_grey"
            app:drawableStartCompat="@drawable/baseline_location_on_24" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginHorizontal="16dp">

            <TextView
                android:id="@+id/hotel_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$200 - $500 USD"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/blue"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" /night"
                android:textSize="14sp"
                android:textColor="@color/black"/>

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>